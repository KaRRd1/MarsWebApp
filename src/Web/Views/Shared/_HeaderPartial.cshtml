<header>
    <div class="header-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-3 logo-wrapper">
                    <a asp-controller="Posts" asp-action="Index" asp-area="">
                        <img src="~/Images/logo.svg" class="logo" alt="">
                    </a>
                </div>
                <div class="col-sm-6 header-links order-1 order-sm-0 mt-sm-0 mt-2">
                    <nav>
                        <ul class="nav">
                            <li class="nav-item elem-backlight">
                                <a class="nav-link" asp-controller="Posts" asp-action="Index" asp-area="">
